@using YazilimSinaviSoru4.Models

@model List<Person>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    tr {
        border-bottom: 1px solid #ddd;
    }
        tr:nth-child(even) {
            background-color: #D6EEEE;
        }
</style>
<table>

    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Status</th>
    </tr>
    @foreach (var person in Model)
    {
        <tr>
            <td>@person.id</td>
            <td>@person.name</td>
            <td>@person.email</td>
            <td>@person.gender</td>
            <td>@person.status</td>
        </tr>
    }
</table>
